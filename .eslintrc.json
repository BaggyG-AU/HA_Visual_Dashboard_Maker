{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/electron",
    "plugin:import/typescript",
    "plugin:react-hooks/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "ignorePatterns": [
    "node_modules/",
    "out/",
    "test-results/",
    ".vite/",
    "dist/",
    "coverage/"
  ],
  "settings": {
    "import/ignore": [
      "node_modules",
      "allotment"
    ],
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true,
        "project": [
          "tsconfig.json"
        ]
      },
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx",
          ".d.ts"
        ]
      }
    }
  },
  "overrides": [
    {
      "files": [
        "tests/**/*.ts",
        "tests/**/*.tsx"
      ],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off",
        "react-hooks/exhaustive-deps": "off"
      }
    }
  ]
}
