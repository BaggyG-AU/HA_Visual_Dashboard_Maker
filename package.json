{
  "name": "ha-visual-dashboard-maker",
  "productName": "HA Visual Dashboard Maker",
  "version": "0.2.0-beta.2",
  "description": "A visual WYSIWYG editor for Home Assistant dashboards with support for custom cards",
  "main": ".vite/build/main.js",
  "private": true,
  "scripts": {
    "start": "electron-forge start",
    "start:wsl": "electron-forge start -- --no-sandbox --disable-gpu",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts,.tsx .",
    "test": "playwright test",
    "test:e2e": "playwright test --project=electron-e2e",
    "test:integration": "playwright test --project=electron-integration",
    "test:unit": "playwright test --project=electron-unit",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report test-results/html"
  },
  "keywords": [
    "home-assistant",
    "dashboard",
    "lovelace",
    "editor",
    "electron",
    "react",
    "typescript"
  ],
  "author": {
    "name": "BaggyG-AU",
    "email": "72800646+BaggyG-AU@users.noreply.github.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BaggyG-AU/HA_Visual_Dashboard_Maker.git"
  },
  "bugs": {
    "url": "https://github.com/BaggyG-AU/HA_Visual_Dashboard_Maker/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron-forge/plugin-vite": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@playwright/test": "^1.57.0",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/js-yaml": "^4.0.9",
