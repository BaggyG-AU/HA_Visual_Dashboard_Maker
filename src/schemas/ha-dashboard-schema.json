{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://home-assistant.io/schemas/dashboard.json",
  "title": "Home Assistant Dashboard Configuration",
  "description": "Schema for Home Assistant Lovelace dashboard YAML configuration (HA 2025.12+)",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "Dashboard title shown in the sidebar"
    },
    "views": {
      "type": "array",
      "description": "Array of dashboard views (tabs)",
      "items": {
        "$ref": "#/definitions/view"
      },
      "minItems": 1
    },
    "background": {
      "type": "string",
      "description": "Background image or color for the dashboard"
    },
    "theme": {
      "type": "string",
      "description": "Theme name to apply to this dashboard"
    }
  },
  "required": ["views"],
  "additionalProperties": true,
  "definitions": {
    "view": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "View title (tab label)"
        },
        "path": {
          "type": "string",
          "description": "URL path for this view",
          "pattern": "^[a-z0-9_-]+$"
        },
        "icon": {
          "type": "string",
          "description": "MDI icon for the view tab (e.g., mdi:home)"
        },
        "type": {
          "type": "string",
          "description": "View layout type",
          "enum": [
            "masonry",
            "sidebar",
            "panel",
            "sections",
            "custom:grid-layout"
          ],
          "default": "masonry"
        },
        "theme": {
          "type": "string",
          "description": "Theme to apply to this specific view"
        },
        "visible": {
          "type": "boolean",
          "description": "Whether the view is visible",
          "default": true
        },
        "badges": {
          "type": "array",
          "description": "Badge entities to show in view header",
          "items": {
            "oneOf": [
              {
                "type": "string",
                "description": "Entity ID"
              },
              {
                "$ref": "#/definitions/badge"
              }
            ]
          }
        },
        "cards": {
          "type": "array",
          "description": "Cards displayed in this view",
          "items": {
            "$ref": "#/definitions/card"
          }
        },
        "layout": {
          "type": "object",
          "description": "Layout configuration for custom:grid-layout",
          "properties": {
            "grid_template_columns": {
              "type": "string",
              "description": "CSS grid template columns",
              "default": "repeat(12, 1fr)"
            },
            "grid_template_rows": {
              "type": "string",
              "description": "CSS grid template rows",
              "default": "repeat(auto-fill, 56px)"
            },
            "grid_gap": {
              "type": "string",
              "description": "Gap between grid cells",
              "default": "8px"
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "badge": {
      "type": "object",
      "properties": {
        "entity": {
          "type": "string",
          "description": "Entity ID to display"
        },
        "name": {
          "type": "string",
          "description": "Override badge name"
        },
        "icon": {
          "type": "string",
          "description": "Override badge icon"
        }
      },
      "required": ["entity"],
      "additionalProperties": true
    },
    "card": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "Card type",
          "enum": [
            "alarm-panel",
            "area",
            "button",
            "calendar",
            "conditional",
            "entities",
            "entity",
            "energy",
            "gauge",
            "glance",
            "grid",
            "heading",
            "history-graph",
            "horizontal-stack",
            "humidifier",
            "iframe",
            "light",
            "logbook",
            "map",
            "markdown",
            "media-control",
            "picture",
            "picture-elements",
            "picture-entity",
            "picture-glance",
            "plant-status",
            "sensor",
            "shopping-list",
            "statistic",
            "statistics-graph",
            "thermostat",
            "tile",
            "todo-list",
            "vertical-stack",
            "weather-forecast",
            "custom:apexcharts-card",
            "custom:native-graph-card",
            "custom:gauge-card-pro",
            "custom:slider-button-card",
            "custom:auto-entities",
            "custom:button-card",
            "custom:card-mod",
            "custom:frigate-card",
            "custom:camera-card",
            "custom:webrtc-camera",
            "custom:surveillance-card",
            "custom:grid-layout",
            "custom:layout-card",
            "custom:mini-graph-card",
            "custom:mini-media-player",
            "custom:swipe-card",
            "custom:expander-card",
            "custom:tabbed-card",
            "custom:popup-card",
            "custom:mushroom-entity-card",
            "custom:mushroom-template-card",
            "custom:mushroom-person-card",
            "custom:mushroom-switch-card",
            "custom:mushroom-number-card",
            "custom:mushroom-select-card",
            "custom:mushroom-vacuum-card",
            "custom:vertical-stack-in-card"
          ]
        },
        "entity": {
          "type": "string",
          "description": "Entity ID for single-entity cards",
          "pattern": "^[a-z_]+\\.[a-z0-9_]+$"
        },
        "entities": {
          "type": "array",
          "description": "List of entities for multi-entity cards",
          "items": {
            "oneOf": [
              {
                "type": "string",
                "pattern": "^[a-z_]+\\.[a-z0-9_]+$"
              },
              {
                "type": "object",
                "properties": {
                  "entity": {
                    "type": "string",
                    "pattern": "^[a-z_]+\\.[a-z0-9_]+$"
                  },
                  "name": {
                    "type": "string"
                  },
                  "icon": {
                    "type": "string"
                  },
                  "secondary_info": {
                    "type": "string",
                    "enum": ["entity-id", "last-changed", "last-triggered", "last-updated", "none"]
                  },
                  "visibility_conditions": {
                    "$ref": "#/definitions/visibilityConditions"
                  }
                },
                "required": ["entity"],
                "additionalProperties": true
              }
            ]
          }
        },
        "visibility_conditions": {
          "$ref": "#/definitions/visibilityConditions",
          "description": "Conditional visibility rules for cards/entities"
        },
        "attribute_display": {
          "type": "array",
          "description": "Attribute display configuration for entity attributes",
          "items": {
            "type": "object",
            "properties": {
              "attribute": {
                "type": "string"
              },
              "label": {
                "type": "string"
              },
              "format": {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["number", "boolean", "string", "timestamp", "json"]
                  },
                  "precision": {
                    "type": "number"
                  },
                  "unit": {
                    "type": "string"
                  },
                  "trueLabel": {
                    "type": "string"
                  },
                  "falseLabel": {
                    "type": "string"
                  },
                  "maxLength": {
                    "type": "number"
                  },
                  "timestampMode": {
                    "type": "string",
                    "enum": ["relative", "absolute"]
                  }
                },
                "additionalProperties": true
              }
            },
            "required": ["attribute"],
            "additionalProperties": true
          }
        },
        "attribute_display_layout": {
          "type": "string",
          "enum": ["inline", "stacked", "table"],
          "description": "Layout option for attribute display"
        },
        "name": {
          "type": "string",
          "description": "Card name/title"
        },
        "title": {
          "type": "string",
          "description": "Card title (header)"
        },
        "icon": {
          "type": "string",
          "description": "MDI icon (e.g., mdi:lightbulb)"
        },
        "state_icons": {
          "type": "object",
          "description": "State-based icon mapping with optional default fallback",
          "patternProperties": {
            ".*": {
              "oneOf": [
                {
                  "type": "string",
                  "description": "MDI icon shorthand (e.g., mdi:fire)"
                },
                {
                  "type": "object",
                  "properties": {
                    "icon": {
                      "type": "string"
                    },
                    "color": {
                      "type": "string"
                    },
                    "size": {
                      "type": "number"
                    }
                  },
                  "required": [
                    "icon"
                  ],
                  "additionalProperties": false
                }
              ]
            }
          },
          "additionalProperties": false
        },
        "image": {
          "type": "string",
          "description": "Image URL"
        },
        "camera_image": {
          "type": "string",
          "description": "Camera entity ID for camera image",
          "pattern": "^camera\\.[a-z0-9_]+$"
        },
        "show_name": {
          "type": "boolean",
          "description": "Whether to show entity name",
          "default": true
        },
        "show_state": {
          "type": "boolean",
          "description": "Whether to show entity state",
          "default": true
        },
        "show_icon": {
          "type": "boolean",
          "description": "Whether to show icon",
          "default": true
        },
        "tap_action": {
          "$ref": "#/definitions/action",
          "description": "Action on tap/click"
        },
        "hold_action": {
          "$ref": "#/definitions/action",
          "description": "Action on long press"
        },
        "double_tap_action": {
          "$ref": "#/definitions/action",
          "description": "Action on double tap"
        },
        "smart_defaults": {
          "type": "boolean",
          "description": "HAVDM: Enable smart default tap_action resolution",
          "default": false
        },
        "multi_entity_mode": {
          "type": "string",
          "enum": ["individual", "aggregate", "batch"],
          "description": "HAVDM: Multi-entity rendering mode"
        },
        "aggregate_function": {
          "type": "string",
          "enum": ["all_on", "any_on", "all_off", "any_off", "count_on", "average_state", "min_state", "max_state"],
          "description": "HAVDM: Aggregate function used in aggregate mode"
        },
        "batch_actions": {
          "type": "array",
          "description": "HAVDM: Batch actions available in batch mode",
          "items": {
            "oneOf": [
              {
                "type": "string",
                "enum": ["turn_on", "turn_off", "toggle", "set_state", "call_service"]
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["turn_on", "turn_off", "toggle", "set_state", "call_service"]
                  },
                  "value": {
                    "oneOf": [{ "type": "string" }, { "type": "number" }, { "type": "boolean" }]
                  },
                  "service": {
                    "type": "string"
                  },
                  "service_data": {
                    "type": "object",
                    "additionalProperties": true
                  }
                },
                "required": ["type"],
                "additionalProperties": false
              }
            ]
          }
        },
        "cards": {
          "type": "array",
          "description": "Nested cards (for stack/grid cards)",
          "items": {
            "$ref": "#/definitions/card"
          }
        },
        "gap": {
          "type": "number",
          "minimum": 0,
          "maximum": 64,
          "description": "Gap between items for vertical-stack and horizontal-stack cards (px)"
        },
        "row_gap": {
          "type": "number",
          "minimum": 0,
          "maximum": 64,
          "description": "Grid row gap (px)"
        },
        "column_gap": {
          "type": "number",
          "minimum": 0,
          "maximum": 64,
          "description": "Grid column gap (px)"
        },
        "align_items": {
          "type": "string",
          "enum": ["start", "center", "end", "stretch", "baseline"],
          "description": "Cross-axis alignment for stack/grid content"
        },
        "justify_content": {
          "type": "string",
          "enum": ["start", "center", "end", "space-between", "space-around", "space-evenly"],
          "description": "Main-axis content distribution for horizontal-stack cards"
        },
        "justify_items": {
          "type": "string",
          "enum": ["start", "center", "end", "stretch"],
          "description": "Inline-axis alignment for grid items"
        },
        "wrap": {
          "type": "string",
          "enum": ["nowrap", "wrap", "wrap-reverse"],
          "description": "Wrapping behavior for horizontal-stack cards"
        },
        "card_margin": {
          "description": "HAVDM: Per-card margin control",
          "oneOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 64
            },
            {
              "type": "string",
              "enum": ["none", "tight", "normal", "relaxed", "spacious", "custom"]
            },
            {
              "type": "string",
              "pattern": "^\\s*\\d+(?:\\.\\d+)?(?:px)?(?:\\s+\\d+(?:\\.\\d+)?(?:px)?){0,3}\\s*$"
            },
            {
              "type": "object",
              "properties": {
                "top": { "type": "number", "minimum": 0, "maximum": 64 },
                "right": { "type": "number", "minimum": 0, "maximum": 64 },
                "bottom": { "type": "number", "minimum": 0, "maximum": 64 },
                "left": { "type": "number", "minimum": 0, "maximum": 64 }
              },
              "additionalProperties": false
            }
          ]
        },
        "card_padding": {
          "description": "HAVDM: Per-card padding control",
          "oneOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 64
            },
            {
              "type": "string",
              "enum": ["none", "tight", "normal", "relaxed", "spacious", "custom"]
            },
            {
              "type": "string",
              "pattern": "^\\s*\\d+(?:\\.\\d+)?(?:px)?(?:\\s+\\d+(?:\\.\\d+)?(?:px)?){0,3}\\s*$"
            },
            {
              "type": "object",
              "properties": {
                "top": { "type": "number", "minimum": 0, "maximum": 64 },
                "right": { "type": "number", "minimum": 0, "maximum": 64 },
                "bottom": { "type": "number", "minimum": 0, "maximum": 64 },
                "left": { "type": "number", "minimum": 0, "maximum": 64 }
              },
              "additionalProperties": false
            }
          ]
        },
        "slides": {
          "type": "array",
          "description": "Slides for Swiper carousel cards",
          "items": {
            "type": "object",
            "properties": {
              "cards": {
                "type": "array",
                "description": "Cards inside this slide",
                "items": {
                  "$ref": "#/definitions/card"
                }
              },
              "alignment": {
                "type": "string",
                "enum": ["top", "center", "bottom"],
                "description": "Vertical alignment of slide content"
              },
              "background": {
                "type": "object",
                "description": "Background configuration for this slide",
                "additionalProperties": true
              },
              "autoplay_delay": {
                "type": "number",
                "description": "Per-slide autoplay delay override (ms)"
              },
              "allow_navigation": {
                "type": "boolean",
                "description": "Allow navigation to this slide"
              },
              "skip_navigation": {
                "type": "boolean",
                "description": "Skip this slide when navigating"
              }
            },
            "additionalProperties": true
          }
        },
        "pagination": {
          "oneOf": [
            { "type": "boolean" },
            {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["bullets", "fraction", "progressbar", "custom"]
                },
                "clickable": { "type": "boolean" }
              },
              "additionalProperties": true
            }
          ],
          "description": "Swiper pagination configuration"
        },
        "navigation": {
          "type": "boolean",
          "description": "Enable Swiper navigation arrows"
        },
        "parameters": {
          "type": "object",
          "description": "Upstream swipe-card Swiper.js parameters (camelCase passthrough)",
          "additionalProperties": true
        },
        "start_card": {
          "type": "number",
          "minimum": 1,
          "description": "1-indexed card to show first"
        },
        "reset_after": {
          "type": "number",
          "minimum": 0,
          "description": "Seconds of inactivity before resetting to start_card"
        },
        "autoplay": {
          "oneOf": [
            { "type": "boolean" },
            {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean" },
                "delay": { "type": "number" },
                "pause_on_interaction": { "type": "boolean" },
                "stop_on_last_slide": { "type": "boolean" }
              },
              "additionalProperties": true
            }
          ],
          "description": "Swiper autoplay configuration"
        },
        "effect": {
          "type": "string",
          "enum": ["slide", "fade", "cube", "coverflow", "flip"],
          "description": "Swiper transition effect"
        },
        "slides_per_view": {
          "oneOf": [
            { "type": "number" },
            { "type": "string", "enum": ["auto"] }
          ],
          "description": "Slides per view"
        },
        "chart_type": {
          "type": "string",
          "enum": ["line", "bar", "area", "pie"],
          "description": "Native graph chart mode"
        },
        "time_range": {
          "type": "string",
          "pattern": "^\\d+(s|m|h|d)$",
          "description": "Graph time range (e.g. 30m, 24h, 7d)"
        },
        "refresh_interval": {
          "type": "string",
          "pattern": "^\\d+(s|m|h|d)$",
          "description": "Graph data refresh interval"
        },
        "x_axis": {
          "type": "object",
          "properties": {
            "mode": {
              "type": "string",
              "enum": ["time", "category"]
            }
          },
          "additionalProperties": true
        },
        "y_axis": {
          "type": "object",
          "properties": {
            "min": {
              "oneOf": [
                { "type": "number" },
                { "type": "string", "enum": ["auto"] }
              ]
            },
            "max": {
              "oneOf": [
                { "type": "number" },
                { "type": "string", "enum": ["auto"] }
              ]
            }
          },
          "additionalProperties": true
        },
        "series": {
          "type": "array",
          "description": "Series configuration for native graph cards",
          "items": {
            "type": "object",
            "properties": {
              "entity": {
                "type": "string",
                "pattern": "^[a-z_]+\\.[a-z0-9_]+$"
              },
              "label": { "type": "string" },
              "color": { "type": "string" },
              "axis": {
                "type": "string",
                "enum": ["left", "right"]
              },
              "smooth": { "type": "boolean" },
              "stack": { "type": "boolean" }
            },
            "required": ["entity"],
            "additionalProperties": true
          }
        },
        "zoom_pan": {
          "type": "boolean",
          "description": "Enable brush-based zoom/pan controls for line/area charts"
        },
        "title-card": {
          "$ref": "#/definitions/card",
          "description": "Card rendered in the expander header"
        },
        "title-card-button-overlay": {
          "type": "boolean",
          "description": "Whether the expand button overlays the title-card"
        },
        "expanded": {
          "type": "boolean",
          "description": "Whether expander starts open"
        },
        "expanded-icon": {
          "type": "string",
          "description": "Icon used when expander is open"
        },
        "collapsed-icon": {
          "type": "string",
          "description": "Icon used when expander is closed"
        },
        "gap": {
          "type": "string",
          "description": "Gap between header and content"
        },
        "padding": {
          "type": "string",
          "description": "Padding of content area"
        },
        "clear": {
          "type": "boolean",
          "description": "Whether to clear floats in content area"
        },
        "overlay-margin": {
          "type": "string",
          "description": "Margin for the overlaid expand button"
        },
        "child-padding": {
          "type": "string",
          "description": "Padding applied to each child card"
        },
        "button-background": {
          "type": "string",
          "description": "Background color of expand/collapse button"
        },
        "tab_position": {
          "type": "string",
          "enum": ["top", "bottom", "left", "right"],
          "description": "Tabs header position"
        },
        "tab_size": {
          "type": "string",
          "enum": ["default", "small", "large"],
          "description": "Tabs header size"
        },
        "default_tab": {
          "type": "number",
          "description": "Default active tab index"
        },
        "animation": {
          "type": "string",
          "enum": ["none", "fade", "slide"],
          "description": "Tabs transition animation"
        },
        "lazy_render": {
          "type": "boolean",
          "description": "Render only the active tab panel"
        },
        "tabs": {
          "type": "array",
          "description": "Tabs configuration for tabs cards",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string",
                "description": "Tab label"
              },
              "icon": {
                "type": "string",
                "description": "Tab icon (MDI)"
              },
              "badge": {
                "oneOf": [
                  { "type": "string" },
                  { "type": "number" }
                ],
                "description": "Optional static badge text/number"
              },
              "count": {
                "type": "number",
                "description": "Optional tab count label"
              },
              "cards": {
                "type": "array",
                "description": "Cards contained in this tab panel",
                "items": {
                  "$ref": "#/definitions/card"
                }
              }
            },
            "additionalProperties": true
          }
        },
        "trigger_label": {
          "type": "string",
          "description": "Popup trigger button label"
        },
        "trigger_icon": {
          "type": "string",
          "description": "Popup trigger icon (MDI)"
        },
        "popup": {
          "type": "object",
          "description": "Popup configuration for custom:popup-card",
          "properties": {
            "title": {
              "type": "string"
            },
            "size": {
              "type": "string",
              "enum": ["auto", "small", "medium", "large", "fullscreen", "custom"]
            },
            "custom_size": {
              "type": "object",
              "properties": {
                "width": { "type": "number" },
                "height": { "type": "number" }
              },
              "additionalProperties": false
            },
            "close_on_backdrop": {
              "type": "boolean"
            },
            "backdrop_opacity": {
              "type": "number",
              "minimum": 0,
              "maximum": 1
            },
            "show_header": {
              "type": "boolean"
            },
            "show_footer": {
              "type": "boolean"
            },
            "close_label": {
              "type": "string"
            },
            "footer_actions": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "label": { "type": "string" },
                  "action": {
                    "type": "string",
                    "enum": ["close", "none"]
                  },
                  "button_type": {
                    "type": "string",
                    "enum": ["default", "primary", "dashed", "link", "text"]
                  }
                },
                "required": ["label"],
                "additionalProperties": false
              }
            },
            "cards": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/card"
              }
            }
          },
          "additionalProperties": true
        },
        "space_between": {
          "type": "number",
          "description": "Space between slides (px)"
        },
        "loop": {
          "type": "boolean",
          "description": "Enable loop mode"
        },
        "direction": {
          "type": "string",
          "enum": ["horizontal", "vertical"],
          "description": "Slide direction"
        },
        "centered_slides": {
          "type": "boolean",
          "description": "Center active slide"
        },
        "free_mode": {
          "type": "boolean",
          "description": "Enable free mode (no snapping)"
        },
        "layout": {
          "type": "object",
          "description": "Grid layout positioning (internal property)",
          "properties": {
            "x": {
              "type": "integer",
              "description": "X position in grid",
              "minimum": 0
            },
            "y": {
              "type": "integer",
              "description": "Y position in grid",
              "minimum": 0
            },
            "w": {
              "type": "integer",
              "description": "Width in grid columns",
              "minimum": 1,
              "default": 6
            },
            "h": {
              "type": "integer",
              "description": "Height in grid rows",
              "minimum": 1,
              "default": 4
            }
          },
          "additionalProperties": false
        },
        "view_layout": {
          "type": "object",
          "description": "View layout positioning (HA native grid)",
          "properties": {
            "grid_column": {
              "type": "string",
              "description": "CSS grid-column value (e.g., '1 / 7')"
            },
            "grid_row": {
              "type": "string",
              "description": "CSS grid-row value (e.g., '1 / 5')"
            }
          },
          "additionalProperties": false
        },
        "content": {
          "type": "string",
          "description": "Markdown content (for markdown cards)"
        },
        "url": {
          "type": "string",
          "description": "URL (for iframe/webpage cards)",
          "format": "uri"
        },
        "theme": {
          "type": "string",
          "description": "Theme to apply to this card"
        },
        "style": {
          "type": ["string", "object"],
          "description": "CSS styles (for card-mod)"
        },
        "card_mod": {
          "type": "object",
          "description": "Card-mod styling configuration",
          "additionalProperties": true
        }
      },
      "required": ["type"],
      "additionalProperties": true
    },
    "action": {
      "type": "object",
      "properties": {
        "action": {
          "type": "string",
          "enum": [
            "none",
            "more-info",
            "toggle",
            "call-service",
            "navigate",
            "url",
            "assist",
            "popup"
          ],
          "default": "more-info"
        },
        "navigation_path": {
          "type": "string",
          "description": "Path for navigate action"
        },
        "url_path": {
          "type": "string",
          "description": "URL for url action",
          "format": "uri"
        },
        "service": {
          "type": "string",
          "description": "Service to call (e.g., light.turn_on)",
          "pattern": "^[a-z_]+\\.[a-z_]+$"
        },
        "service_data": {
          "type": "object",
          "description": "Service call data",
          "additionalProperties": true
        },
        "target": {
          "type": "object",
          "description": "Service call target",
          "properties": {
            "entity_id": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              ]
            },
            "device_id": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              ]
            },
            "area_id": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              ]
            }
          },
          "additionalProperties": true
        },
        "confirmation": {
          "oneOf": [
            {
              "type": "boolean"
            },
            {
              "type": "object",
              "properties": {
                "text": {
                  "type": "string"
                },
                "exemptions": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "user": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          ],
          "description": "Confirmation dialog configuration"
        },
        "popup_title": {
          "type": "string",
          "description": "Popup title for popup action"
        },
        "popup_size": {
          "type": "string",
          "enum": ["auto", "small", "medium", "large", "fullscreen", "custom"]
        },
        "popup_custom_size": {
          "type": "object",
          "properties": {
            "width": { "type": "number" },
            "height": { "type": "number" }
          },
          "additionalProperties": false
        },
        "popup_close_on_backdrop": {
          "type": "boolean"
        },
        "popup_backdrop_opacity": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "popup_show_header": {
          "type": "boolean"
        },
        "popup_show_footer": {
          "type": "boolean"
        },
        "popup_close_label": {
          "type": "string"
        },
        "popup_footer_actions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "action": {
                "type": "string",
                "enum": ["close", "none"]
              },
              "button_type": {
                "type": "string",
                "enum": ["default", "primary", "dashed", "link", "text"]
              }
            },
            "required": ["label"],
            "additionalProperties": false
          }
        },
        "popup_cards": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/card"
          }
        }
      },
      "additionalProperties": true
    },
    "visibilityCondition": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "condition": {
              "type": "string",
              "enum": [
                "state_equals",
                "state_not_equals",
                "state_in",
                "state_not_in",
                "attribute_equals",
                "attribute_greater_than",
                "attribute_less_than",
                "entity_exists"
              ]
            },
            "entity": {
              "type": "string",
              "pattern": "^[a-z_]+\\.[a-z0-9_]+$"
            },
            "attribute": {
              "type": "string"
            },
            "value": {
              "oneOf": [
                { "type": "string" },
                { "type": "number" },
                { "type": "boolean" }
              ]
            },
            "values": {
              "type": "array",
              "items": {
                "oneOf": [
                  { "type": "string" },
                  { "type": "number" },
                  { "type": "boolean" }
                ]
              }
            }
          },
          "required": ["condition", "entity"],
          "additionalProperties": false
        },
        {
          "type": "object",
          "properties": {
            "condition": {
              "type": "string",
              "enum": ["and", "or"]
            },
            "conditions": {
              "type": "array",
              "items": { "$ref": "#/definitions/visibilityCondition" }
            }
          },
          "required": ["condition", "conditions"],
          "additionalProperties": false
        }
      ]
    },
    "visibilityConditions": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/visibilityCondition"
      }
    }
  }
}
